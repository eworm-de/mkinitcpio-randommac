#!/bin/sh

run_hook() {
	if [[ "${randommac}" == "y" ]]; then
		if [[ -n "${ip}" ]]; then
			changemac="$(echo ${ip} | cut -d: -f6)"
		fi
		if [[ -z "${changemac}" ]]; then
			changemac="eth0"
		fi

		msg ":: Initializing network interface ${changemac} with random mac address..."
		macchanger -e ${changemac}
	fi
}
